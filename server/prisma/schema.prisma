generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Menu {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId()
  name        String
  description String
  items       MenuItem[]
}

model MenuItem {
  id          String @id @default(auto()) @map("_id") @db.ObjectId()
  name        String
  description String
  price       Float
  menuId      String @db.ObjectId()
  menu        Menu   @relation(fields: [menuId], references: [id])
}
